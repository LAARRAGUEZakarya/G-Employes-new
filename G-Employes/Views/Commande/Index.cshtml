@model IEnumerable<GestionEmployes.Models.G_Stock.Commande>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">LES COMMANDES</h1>
<hr />
<br />
<div class="row container">

    <a asp-action="Create" class="btn btn-success btn-lg col">NOUVEAU COMMANDE</a>&nbsp;&nbsp;&nbsp;

    <button type="button" asp-action="Delete" class="btn btn-danger btn-lg col" data-toggle="modal" data-target="#Supprission">
        SUPPRIMER TOUS!
    </button>
</div>
<br />
<br />
<br />
<!-- Modal -->
<div class="modal fade" id="Supprission" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Supprission!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Voulez-vous vraiment effacer tous les opérations?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <button type="submit" class="btn btn-danger">OUI</button>
                    <button type="button" asp-action="Index" class="btn btn-outline-success" data-dismiss="modal">NON</button>
                </form>
            </div>
        </div>
    </div>
</div>
