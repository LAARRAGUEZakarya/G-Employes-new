<table class="table">
    <thead>
        <tr>
            <th>
                PRODUIT
            </th>
            <th>
                CATEGORIE
            </th>
            <th>
                PRIX
            </th>
            <th>
                QUANTITE
            </th>
            <th>
                DATE D'OPERATION
            </th>
            <th>
                ETAT DE COMMANDE
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.produit.Desgination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.produit.Categorie.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.produit.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtt_Diduir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_operation)
            </td>

            @if (!item.Etat)
            {
                         <td class="bg-danger text-white">

                                        Pas accepté
                                      </td>
            }
            else
            {
                                 <td class="bg-success text-white">

                                              Accepté
                                              </td>
            }

        </tr>
        }
    </tbody>
</table>
