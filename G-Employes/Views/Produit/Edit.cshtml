@model GestionEmployes.ViewModel.CategorieProduitViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">MODIFICATION DE PRODUIT</h1>

<hr />
<br />
<div class="row container">
    <div class="col-md-7 container">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group col">
                <h4>Desgination</h4>
                <input asp-for="Desgination" class="form-control" />
                <span asp-validation-for="Desgination" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <h4>Prix</h4>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <h4>Quantite</h4>
                <input asp-for="Quantite" class="form-control" />
                <span asp-validation-for="Quantite" class="text-danger"></span>
            </div>

            <div class="form-group col">
                <h4>Image</h4> 
                <input type="file" name="File" asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
                <img id="imgOverier" src="~/ImagesProducts/@Model.ImageUrl" style="width:100px;" class="img-thumbnail" />
            </div>  
            
            <input type="hidden"  asp-for="ImageUrl" class="form-control" />
            
            <div class="form-group col">
                <h4>Categorie</h4>   
                <select asp-for="CategorieId" class="form-control" asp-items="@(new SelectList(Model.Categories,"Id","Type"))"></select>
                <span asp-validation-for="CategorieId" class="text-danger"></span>
            </div>
            <div class="form-group container row col ">
                <input type="submit" value="Enregistrer" class="btn btn-primary btn-lg col" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-outline-info btn-lg col">Retour a la list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
