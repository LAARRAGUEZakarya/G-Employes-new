@model GestionEmployes.Models.CategorieProduit

@{
    ViewData["Title"] = "Create";
}


<h1 class="text-center">CATÉGORIE DE PRODUIT</h1>
<br />

<hr />
<div class="row">
    <div class="col-md-8 container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group row container">
                <input type="submit" value="Ajouter" class="btn btn-primary col" />&nbsp;&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-outline-info col">Retour à la liste</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
